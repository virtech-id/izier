{
    "formatter": {
        "enabled": true,
        "indentStyle": "tab",
        "indentSize": 4,
        "lineWidth": 80,
        "ignore": [
            "/node_modules",
            "/.pnp",
            ".pnp.js",

            "/coverage",

            "/.next/",
            "/out/",

            "/build",

            ".DS_Store",
            "*.pem",

            "npm-debug.log*",
            "yarn-debug.log*",
            "yarn-error.log*",
            ".pnpm-debug.log*",

            ".env*.local",

            ".vercel",

            "*.tsbuildinfo",
            ".dccache",

            ".sentryclirc",

            "*.css",
            "*.config.js",
            "*.md",
            "next-env.d.ts"
        ]
    },
    "javascript": {
        "formatter": {
            "semicolons": "asNeeded",
            "quoteStyle": "double",
            "trailingComma": "all"
        }
    },
    "linter": {
        "enabled": true,
        "rules": {
            "recommended": true
        }
    }
}